# OpenAI API ключ (обязательно)
# Получите ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-key-here

# API ключ для обновления индекса через /update_index (опционально)
# Используйте сложный случайный ключ для безопасности
UPDATE_API_KEY=your-update-key-here

# Режим работы (development/production)
# В production allow_dangerous_deserialization будет False (безопаснее)
# Для разработки можно использовать ENV=development
ENV=production

# Уровень логирования (опционально)
# Доступные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL
# По умолчанию: INFO (в production) или DEBUG (в development)
LOG_LEVEL=INFO
