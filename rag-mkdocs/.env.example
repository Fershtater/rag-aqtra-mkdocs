# OpenAI API ключ (обязательно)
# Получите ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-key-here

# API ключ для обновления индекса через /update_index (опционально)
# Используйте сложный случайный ключ для безопасности
UPDATE_API_KEY=your-update-key-here

# Режим работы (development/production)
# В production allow_dangerous_deserialization будет False (безопаснее)
# Для разработки можно использовать ENV=development
ENV=production

# Уровень логирования (опционально)
# Доступные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL
# По умолчанию: INFO (в production) или DEBUG (в development)
LOG_LEVEL=INFO

# Настройки промпта (опционально)
# Язык ответов (ru|en)
PROMPT_LANGUAGE=ru

# Базовый URL документации
PROMPT_BASE_DOCS_URL=https://docs.aqtra.io/

# Сообщение при отсутствии информации
PROMPT_NOT_FOUND_MESSAGE=Информация не найдена в базе документации.

# Включать источники в текст ответа (true|false)
PROMPT_INCLUDE_SOURCES_IN_TEXT=true

# Режим работы (strict|helpful)
PROMPT_MODE=strict

# Дефолтная температура для LLM (0.0-1.0)
PROMPT_DEFAULT_TEMPERATURE=0.0

# Дефолтное количество чанков для поиска (1-10)
PROMPT_DEFAULT_TOP_K=4

# Rate limiting (опционально)
# Лимит запросов для /query (запросов за окно)
QUERY_RATE_LIMIT=30
# Окно времени для /query (секунды)
QUERY_RATE_WINDOW_SECONDS=60
# Лимит запросов для /update_index (запросов за окно)
UPDATE_RATE_LIMIT=3
# Окно времени для /update_index (секунды)
UPDATE_RATE_WINDOW_SECONDS=3600

# Кэширование (опционально)
# Максимальный размер кэша (количество записей)
CACHE_MAX_SIZE=500
# Время жизни записи в кэше (секунды)
CACHE_TTL_SECONDS=600

# OpenAI настройки (опционально)
# Таймаут для запросов к OpenAI (секунды)
OPENAI_TIMEOUT=30
# Таймаут для batch операций (создание индекса, секунды)
# По умолчанию: 300 (5 минут) для больших batch операций
OPENAI_BATCH_TIMEOUT=300
# Таймаут для LLM запросов (Chat API, секунды)
# По умолчанию: 120 (2 минуты) для обработки больших контекстов и contextual compression
OPENAI_LLM_TIMEOUT=120
# Максимальное количество повторных попыток
OPENAI_MAX_RETRIES=3
# База для экспоненциального backoff
OPENAI_RETRY_BACKOFF_BASE=1.5
# CORS настройки (опционально)
# Разрешенные домены для CORS (через запятую)
# Для production обязательно укажите конкретные домены
# CORS_ORIGINS=https://docs.aqtra.io,https://app.aqtra.io

# CORS настройки (опционально)
# Разрешенные домены для CORS (через запятую)
# Для production обязательно укажите конкретные домены, например:
# CORS_ORIGINS=https://docs.aqtra.io,https://app.aqtra.io
# Если не указано, в development разрешены все домены, в production - только локальный доступ
